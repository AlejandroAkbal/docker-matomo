#!/bin/sh

echo "Updating GeoLiteCity..."
wget -q http://geolite.maxmind.com/download/geoip/database/GeoLiteCityv6-beta/GeoLiteCityv6.dat.gz -P /etc/nginx/geoip/
gzip -d /etc/nginx/geoip/GeoLiteCityv6.dat.gz
mv /etc/nginx/geoip/GeoLiteCityv6.dat /etc/nginx/geoip/GeoIPv6City.dat
echo $(date -r /etc/nginx/geoip/GeoIPv6City.dat)

echo "Updating GeoLiteCountry..."
wget -q http://geolite.maxmind.com/download/geoip/database/GeoIPv6.dat.gz -P /etc/nginx/geoip/
gzip -d /etc/nginx/geoip/GeoIPv6.dat.gz
mv /etc/nginx/geoip/GeoIPv6.dat /etc/nginx/geoip/GeoIPv6Country.dat
echo $(date -r /etc/nginx/geoip/GeoIPv6Country.dat)
